{% extends 'admin/base.html.twig' %}

{% block title %}Manage Games{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Games Management</h1>
        <a href="{{ path('admin_game_new') }}" class="btn btn-primary">Create New Game</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>Difficulty</th>
            <th>Token Cost</th>
            <th>Rewards (Tokens/XP)</th>
            <th>Status</th>
            <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for game in games %}
                <tr>
                    <td>{{ game.id }}</td>
                    <td>{{ game.name }}</td>
                    <td><span class="badge bg-info">{{ game.type }}</span></td>
                    <td><span class="badge bg-warning">{{ game.difficulty }}</span></td>
                    <td>{{ game.tokenCost }}</td>
                    <td>{{ game.rewardTokens }} / {{ game.rewardXP }}</td>
                    <td>
                        {% if game.isActive %}
                            <span class="badge bg-success">Active</span>
                        {% else %}
                            <span class="badge bg-secondary">Inactive</span>
                        {% endif %}
                    </td>

                    <td>
                        <a href="{{ path('admin_game_show', {id: game.id}) }}" class="btn btn-sm btn-info">View</a>
                        <a href="{{ path('admin_game_edit', {id: game.id}) }}" class="btn btn-sm btn-warning">Edit</a>


                        <form method="post" action="{{ path('admin_game_delete', {id: game.id}) }}"
                            style="display:inline;" onsubmit="return confirm('Are you sure?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>

                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">No games found</td>
                    </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}