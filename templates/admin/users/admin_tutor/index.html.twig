{% extends 'base.html.twig' %}

{% block title %}Tutor Management{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Tutor Management</h1>
        <a href="{{ path('app_admin_tutors_new') }}" class="btn btn-primary">Add New Tutor</a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% if tutors is empty %}
        <div class="alert alert-info">
            No tutors found. <a href="{{ path('app_admin_tutors_new') }}">Create the first tutor profile</a>.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Expertise</th>
                        <th>Experience</th>
                        <th>Hourly Rate</th>
                        <th>Availability</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tutor in tutors %}
                        <tr>
                            <td>{{ tutor.id }}</td>
                            <td>{{ tutor.firstName }} {{ tutor.lastName }}</td>
                            <td>{{ tutor.expertise|slice(0, 50) }}...</td>
                            <td>{{ tutor.yearsOfExperience }} years</td>
                            <td>${{ tutor.hourlyRate ?? 'N/A' }}</td>
                            <td>
                                {% if tutor.isAvailable %}
                                    <span class="badge bg-success">Available</span>
                                {% else %}
                                    <span class="badge bg-danger">Unavailable</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_admin_tutors_show', {id: tutor.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('app_admin_tutors_edit', {id: tutor.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                <form method="post" action="{{ path('app_admin_tutors_toggle_availability', {id: tutor.id}) }}" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-secondary">Toggle</button>
                                </form>
                                <form method="post" action="{{ path('app_admin_tutors_delete', {id: tutor.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this tutor?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tutor.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}
