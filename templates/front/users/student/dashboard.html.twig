{% extends 'base.html.twig' %}

{% block title %}Student Dashboard{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            {% if student %}
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h1 class="mb-1">Welcome back, {{ student.firstName }}!</h1>
                        <p class="text-muted">Continue your learning journey today.</p>
                    </div>
                    <div>
                        <span class="badge bg-primary fs-6">{{ student.university }}</span>
                    </div>
                </div>
            {% else %}
                <h1 class="mb-4">Student Dashboard</h1>
            {% endif %}

            <!-- Stats Cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-4">
                    <div class="card border-primary">
                        <div class="card-body text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-calendar-check text-primary mb-2" viewBox="0 0 16 16">
                                <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                            </svg>
                            <h3 class="text-primary mb-0">0</h3>
                            <p class="text-muted mb-0 small">Active Sessions</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-success">
                        <div class="card-body text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-check-circle text-success mb-2" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                            <h3 class="text-success mb-0">0</h3>
                            <p class="text-muted mb-0 small">Completed Sessions</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card border-info">
                        <div class="card-body text-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-book text-info mb-2" viewBox="0 0 16 16">
                                <path d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z"/>
                            </svg>
                            <h3 class="text-info mb-0">0</h3>
                            <p class="text-muted mb-0 small">Enrolled Courses</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="row">
                <!-- Quick Actions -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="{{ path('app_student_courses') }}" class="btn btn-outline-primary">
                                    <i class="bi bi-book"></i> Browse Courses
                                </a>
                                <a href="#" class="btn btn-outline-success">
                                    <i class="bi bi-search"></i> Find a Tutor
                                </a>
                                <a href="{{ path('app_student_profile_edit') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-person-gear"></i> Edit Profile
                                </a>
                                <a href="{{ path('app_home') }}" class="btn btn-outline-info">
                                    <i class="bi bi-house"></i> Back to Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- My Learning -->
                <div class="col-md-8 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">My Learning</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                <h5>Start Your Learning Journey!</h5>
                                <p class="mb-0">You haven't enrolled in any courses yet. Browse our catalog to find courses that match your interests.</p>
                                <a href="{{ path('app_student_courses') }}" class="btn btn-primary btn-sm mt-2">Browse Courses</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Profile Summary -->
            {% if student %}
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Your Profile Summary</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Name:</strong> {{ student.firstName }} {{ student.lastName }}</p>
                                    <p><strong>University:</strong> {{ student.university }}</p>
                                    {% if student.major %}
                                        <p><strong>Major:</strong> {{ student.major }}</p>
                                    {% endif %}
                                </div>
                                <div class="col-md-6">
                                    {% if student.academicLevel %}
                                        <p><strong>Academic Level:</strong> {{ student.academicLevel }}</p>
                                    {% endif %}
                                    {% if student.interests %}
                                        <p><strong>Interests:</strong> {{ student.interests|slice(0, 100) }}...</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
