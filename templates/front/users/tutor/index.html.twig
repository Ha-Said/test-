{% extends 'base.html.twig' %}

{% block title %}Tutor Profile{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Tutor Profile</h1>
            
            {% if tutor %}
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 text-center">
                                {% if tutor.profilePicture %}
                                    <img src="{{ tutor.profilePicture }}" class="img-fluid rounded-circle mb-3" alt="Profile Picture" style="max-width: 150px;">
                                {% else %}
                                    <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px;">
                                        <h1 class="mb-0">{{ tutor.firstName|slice(0, 1) }}{{ tutor.lastName|slice(0, 1) }}</h1>
                                    </div>
                                {% endif %}
                                <h4>{{ tutor.firstName }} {{ tutor.lastName }}</h4>
                                <p class="text-muted">Tutor</p>
                                {% if tutor.isAvailable %}
                                    <span class="badge bg-success">Available</span>
                                {% else %}
                                    <span class="badge bg-danger">Unavailable</span>
                                {% endif %}
                            </div>
                            <div class="col-md-9">
                                <h5 class="mb-3">Profile Information</h5>
                                
                                <div class="mb-3">
                                    <strong>Bio:</strong>
                                    <p>{{ tutor.bio ?? 'No bio provided yet.' }}</p>
                                </div>

                                <div class="mb-3">
                                    <strong>Expertise:</strong>
                                    <p>{{ tutor.expertise ?? 'Not specified' }}</p>
                                </div>

                                <div class="mb-3">
                                    <strong>Qualifications:</strong>
                                    <p>{{ tutor.qualifications ?? 'Not specified' }}</p>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <strong>Years of Experience:</strong>
                                        <p>{{ tutor.yearsOfExperience }} years</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <strong>Hourly Rate:</strong>
                                        <p>${{ tutor.hourlyRate ?? 'Not set' }}</p>
                                    </div>
                                </div>

                                <div class="mt-4">
                                    <a href="{{ path('app_tutor_profile_edit') }}" class="btn btn-primary">Edit Profile</a>
                                    <a href="{{ path('app_tutor_dashboard') }}" class="btn btn-outline-secondary">Back to Dashboard</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <h4>No Tutor Profile Found</h4>
                    <p>You don't have a tutor profile yet. Please create one to get started.</p>
                    <a href="{{ path('app_tutor_profile_edit') }}" class="btn btn-primary">Create Profile</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
